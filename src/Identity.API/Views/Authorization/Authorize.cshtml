@using Identity.API.Models.Account
@using Microsoft.Extensions.Primitives
@model AuthorizeViewModel

<div class="auth-page">
    <div class="lead">            
        <h1>Authorization</h1>
        <p>Do you want to grant <strong>@Model.ApplicationName</strong> access to your data? (scopes requested: @Model.Scope)</p>
    </div>
    
    <form method="post">
        <input type="submit" name="submit.Accept" value="Yes" />
        <input type="submit" name="submit.Deny" value="No" />
    </form>
</div>